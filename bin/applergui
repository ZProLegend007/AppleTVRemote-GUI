#!/usr/bin/env python3
"""
ApplerGUI - Apple TV Remote GUI Launcher
"""

import sys
import os

def main():
    """Main launcher function"""
    # Ensure we can import applergui
    script_dir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    sys.path.insert(0, script_dir)
    
    try:
        from applergui.main import main as applergui_main
        applergui_main()
    except ImportError as e:
        print(f"‚ùå Failed to import applergui: {e}")
        print("üí° Please install ApplerGUI with: pip install .")
        sys.exit(1)
    except Exception as e:
        print(f"‚ùå Launch failed: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()